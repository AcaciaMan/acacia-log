{
  "name": "acacia-log",
  "displayName": "Acacia Log Viewer & Analyzer",
  "description": "Log viewer and analysis tool — visualize gaps, chunk statistics, pattern search and timeline navigation across large log files.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AcaciaMan/acacia-log"
  },
  "version": "4.0.0",
  "publisher": "manacacia",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "log",
    "log viewer",
    "log analysis",
    "log parser",
    "timestamp",
    "log gaps",
    "log statistics",
    "log file",
    "log monitoring",
    "log tools"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.setLogDateFormat",
        "title": "Log navigate to Date Format",
        "category": "Acacia Log",
        "description": "Sets the date format used in the log files."
      },
      {
        "command": "extension.setLogDateRegex",
        "title": "Log navigate to Date RegExp",
        "category": "Acacia Log",
        "description": "Sets the regular expression to match the date in the log files."
      },
      {
        "command": "extension.setLogSearchDate",
        "title": "Log navigate to Search Date",
        "category": "Acacia Log",
        "description": "Sets the date to search for in the log files (YYYY-MM-DD)."
      },
      {
        "command": "extension.setLogSearchTime",
        "title": "Log navigate to Search Time",
        "category": "Acacia Log",
        "description": "Sets the time to search for in the log file and Runs the search."
      },
      {
        "command": "extension.calculateSimilarLineCounts",
        "title": "Similar Lines",
        "category": "Acacia Log",
        "description": "Calculates counts of similar lines in the log file and displays them in descending order.",
        "icon": "$(graph)"
      },
      {
        "command": "extension.drawLogTimeline",
        "title": "Timeline",
        "category": "Acacia Log",
        "description": "Draws a chart containing a timeline of log file records.",
        "icon": "$(graph-line)"
      },
      {
        "command": "acacia-log.logExplorer.refresh",
        "title": "Refresh Log Files",
        "category": "Acacia Log",
        "icon": "$(refresh)"
      },
      {
        "command": "acacia-log.logExplorer.addFolder",
        "title": "Add Log Folder",
        "category": "Acacia Log",
        "icon": "$(add)"
      },
      {
        "command": "acacia-log.logExplorer.removeFolder",
        "title": "Remove Folder",
        "category": "Acacia Log",
        "icon": "$(remove)"
      },
      {
        "command": "acacia-log.logExplorer.openFile",
        "title": "Open Log File",
        "category": "Acacia Log"
      },
      {
        "command": "acacia-log.logExplorer.showFileInfo",
        "title": "Show File Information",
        "category": "Acacia Log",
        "icon": "$(info)"
      },
      {
        "command": "acacia-log.logExplorer.revealInExplorer",
        "title": "Reveal in File Explorer",
        "category": "Acacia Log"
      },
      {
        "command": "acacia-log.logExplorer.generateGapReport",
        "title": "HTML Report",
        "category": "Acacia Log",
        "icon": "$(graph-scatter)"
      },
      {
        "command": "acacia-log.logExplorer.generateChunkStatsReport",
        "title": "Chunk Statistics Report",
        "category": "Acacia Log",
        "icon": "$(pulse)"
      },
      {
        "command": "acacia-log.logExplorer.compareChunkStats",
        "title": "Compare Chunk Statistics (multi-file)",
        "category": "Acacia Log",
        "icon": "$(diff-multiple)"
      },
      {
        "command": "acacia-log.logExplorer.convertJsonlToLog",
        "title": "Convert JSONL to Log",
        "category": "Acacia Log",
        "icon": "$(file-code)"
      },
      {
        "command": "acacia-log.logExplorer.filter",
        "title": "Filter Log Files",
        "category": "Acacia Log",
        "icon": "$(filter)"
      },
      {
        "command": "acacia-log.logExplorer.clearFilter",
        "title": "Filter Active — Click to Change / Clear",
        "category": "Acacia Log",
        "icon": "$(filter-filled)"
      },
      {
        "command": "acacia-log.openLogManagerPanel",
        "title": "Open Log Manager Panel",
        "category": "Acacia Log",
        "icon": "$(preview)"
      },
      {
        "command": "acacia-log.loadMoreAbove",
        "title": "Load More Above",
        "category": "Acacia Log",
        "icon": "$(arrow-up)",
        "description": "Extend the virtual chunk view by 100 lines above the current window."
      },
      {
        "command": "acacia-log.loadMoreBelow",
        "title": "Load More Below",
        "category": "Acacia Log",
        "icon": "$(arrow-down)",
        "description": "Extend the virtual chunk view by 100 lines below the current window."
      },
      {
        "command": "acacia-log.toggleLensDecorations",
        "title": "Toggle Lens Decorations",
        "category": "Acacia Log",
        "icon": "$(color-mode)"
      },
      {
        "command": "acacia-log.findLens",
        "title": "Find Lens Pattern in File",
        "category": "Acacia Log",
        "icon": "$(search)"
      },
      {
        "command": "acacia-log.toggleLensKey",
        "title": "Toggle Single Lens Visibility",
        "category": "Acacia Log",
        "icon": "$(eye)"
      },
      {
        "command": "acacia-log.manageLenses",
        "title": "Manage Lenses",
        "category": "Acacia Log",
        "icon": "$(telescope)"
      },
      {
        "command": "acacia-log.convertToJsonl",
        "title": "Acacia Log: Convert to JSONL",
        "category": "Acacia Log",
        "icon": "$(json)"
      },
      {
        "command": "acacia-log.logExplorer.convertToJsonl",
        "title": "Convert to JSONL",
        "category": "Acacia Log",
        "icon": "$(json)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionContainer",
          "title": "Acacia Log",
          "icon": "resources/log_icon.svg"
        }
      ]
    },
    "views": {
      "myExtensionContainer": [
        {
          "type": "webview",
          "id": "acacia-log.logManager",
          "name": "Log Manager",
          "icon": "resources/log_icon.svg"
        },
        {
          "id": "acacia-log.logExplorer",
          "name": "Log Files",
          "icon": "resources/log_icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "acacia-log.logExplorer.refresh",
          "when": "view == acacia-log.logExplorer",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.addFolder",
          "when": "view == acacia-log.logExplorer",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.filter",
          "when": "view == acacia-log.logExplorer && !acacia-log.filterActive",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.clearFilter",
          "when": "view == acacia-log.logExplorer && acacia-log.filterActive",
          "group": "navigation"
        },
        {
          "command": "acacia-log.openLogManagerPanel",
          "when": "view == acacia-log.logManager",
          "group": "navigation@1"
        },
        {
          "command": "acacia-log.logExplorer.generateGapReport",
          "when": "view == acacia-log.logManager",
          "group": "navigation@2"
        },
        {
          "command": "acacia-log.logExplorer.generateChunkStatsReport",
          "when": "view == acacia-log.logManager",
          "group": "navigation@3"
        },
        {
          "command": "acacia-log.logExplorer.compareChunkStats",
          "when": "view == acacia-log.logExplorer",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.convertToJsonl",
          "when": "view == acacia-log.logExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "acacia-log.logExplorer.openFile",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.showFileInfo",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.revealInExplorer",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.removeFolder",
          "when": "view == acacia-log.logExplorer && viewItem == logFolder",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.compareChunkStats",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.convertJsonlToLog",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        },
        {
          "command": "acacia-log.logExplorer.convertToJsonl",
          "when": "view == acacia-log.logExplorer && viewItem == logFile",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "acacia-log.loadMoreAbove",
          "when": "resourceScheme == acacia-log && resourcePath =~ /navigate-chunk/",
          "group": "navigation@1"
        },
        {
          "command": "acacia-log.loadMoreBelow",
          "when": "resourceScheme == acacia-log && resourcePath =~ /navigate-chunk/",
          "group": "navigation@2"
        },
        {
          "command": "acacia-log.toggleLensDecorations",
          "when": "resourceScheme == file || resourceScheme == acacia-log",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Acacia Log Settings",
      "properties": {
        "acacia-log.logDateFormat": {
          "type": "string",
          "default": "yyyy-MM-dd HH:mm:ss",
          "description": "The date format used in the log files."
        },
        "acacia-log.logDateRegex": {
          "type": "string",
          "default": "\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}",
          "description": "The regular expression to match the date in the log files."
        },
        "acacia-log.logSearchDate": {
          "type": "string",
          "default": "2023-01-01",
          "description": "The date to search for in the log files (YYYY-MM-DD)."
        },
        "acacia-log.logSearchTime": {
          "type": "string",
          "default": "12:00:00",
          "description": "The time to search for in the log files (HH:mm:ss)."
        },
        "acacia-log.logFilePath": {
          "type": "string",
          "default": "",
          "description": "The path to the log file."
        },
        "acacia-log.patternsFilePath": {
          "type": "string",
          "default": "",
          "description": "The path to the search patterns JSON file."
        },
        "acacia-log.lensDecorationsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable live lens decorations (coloured highlights) in the editor based on logPatterns.json."
        },
        "acacia-log.lensVisibility": {
          "type": "object",
          "default": {},
          "description": "Per-lens visibility overrides. Keys are lens keys from logPatterns.json (e.g. \"error\", \"warn\"). Values are booleans: true = visible, false = hidden. Keys absent from this object inherit the lens's lensEnabled value.",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "acacia-log.jsonl.messageMode": {
          "type": "string",
          "enum": [
            "firstLineMinusTimestamp",
            "firstLineAsIs"
          ],
          "default": "firstLineMinusTimestamp",
          "description": "How the 'message' field is derived. 'firstLineMinusTimestamp' strips the detected timestamp from the first line; 'firstLineAsIs' uses the full line."
        },
        "acacia-log.jsonl.maxMultilineSize": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of lines per logical log entry. Lines beyond this limit are dropped and a '[... truncated ...]' marker is appended."
        },
        "acacia-log.jsonl.openResultInNewEditor": {
          "type": "boolean",
          "default": true,
          "description": "When true, JSONL output is opened in a new untitled editor. When false, the current document is replaced."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest",
    "test:activation": "jest --testPathPatterns=activation",
    "test:coverage": "jest --coverage",
    "test:e2e": "vscode-test",
    "bundle-size": "node -e \"const fs=require('fs'); const s=fs.statSync('dist/extension.js'); console.log('Bundle size:', (s.size/1024).toFixed(1), 'KB');\""
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "luxon": "^3.7.2"
  },
  "icon": "log_icon.png"
}
